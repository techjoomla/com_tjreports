	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1.7</version>
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/tjreportsindexer.install.sql</file>
        </sql>
    </install>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<files>
		<filename plugin="tjreportsindexer">tjreportsindexer.php</filename>
		<filename>index.html</filename>
		<folder>sql</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_user_tjreportsindexer.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_user_tjreportsindexer.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
		</fields>
	</config>

</extension>
